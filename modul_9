    //характеристика автомобиля
class carData {
    //вес авто
let weiht: Int = 2108
        //длина
let length: Int = 4976
    //ширина
let widht: Int = 1963
    //высота
let heihgt: Int = 1435
    //колесная база
let weelbase: Int = 2959
    //клиренс
let clearenc: Double = 154.9
    //вместимость багажника
